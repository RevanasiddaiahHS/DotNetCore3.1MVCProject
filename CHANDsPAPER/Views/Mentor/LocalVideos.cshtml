@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function deletelocalvideos(fileuniqueid, mentorid, fileuniquepath) {


            swal({
                title: "Delete",
                text: "Are you sure you want to delete this video?",
                showCancelButton: true,
                confirmButtonColor: "#EF5350",
                confirmButtonText: "Ok",
                cancelButtonText: "Cancel",
                closeOnConfirm: true,
                closeOnCancel: true
            },
                function (isConfirm) {
                    if (isConfirm) {
                        $.ajax({
                            type: "get",
                            dataType: "Json",
                            url: '/Mentor/DelteLocalVideo?fileuniqueid=' + fileuniqueid + '&mentorid=' + mentorid + '&fileunquepath=' + fileuniquepath,
                            success: function (data) {
                                window.location.href = '/Mentor/LocalVideos';
                            }
                        })
                    }
                });
        }
        $(document).ready(function () {
            setTimeout(function () {
                $("#Localvideosuccessmessage").addClass('hide')
            }, 6000)
            $(".alert .close").on('click', function () {
                $(this).parent('.alert').addClass('hide');
            })
        })
    </script>
